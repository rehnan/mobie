<fieldset>
    <legend class="text-center header"><h1>Sign up</h1></legend>
</fieldset>
<form class="form-signup" action="/auth/signup" method="POST">
    
    <div class="input-group input-group-lg">
         <span class="input-group-addon" id="sizing-addon1">Name:</span>
         <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name" aria-describedby="sizing-addon1" required autofocus>
    </div>

    <br/>
    <div class="input-group input-group-lg">
         <span class="input-group-addon" id="sizing-addon1">Email:</span>
         <input type="text" name="username" class="form-control" id="email" placeholder="Enter your email" aria-describedby="sizing-addon1">
    </div>

    <br/>
    <div class="input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1">Password:</span>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" aria-describedby="sizing-addon1">
    </div>
    
    <br/>
    <input type="submit" value="Register" class="btn btn-lg btn-primary btn-block"/>
    <a href="/auth/login" class="pull-right need-help"> Back to login </a><span class="clearfix"></span>
</form>

<% if (typeof message !== 'undefined' ) { %>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
        <strong><%= message %></strong> 
    </div>
<% } %>
