<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><center><h3> Manage Sessions </h3></center><a href="/speaker/session/create" >New Session</a></div>
  <div class="panel-body">
    <p>Aqui vão as descrições da sessão</p>
  </div>

  <!-- Table Sessions -->
 <div class="table-responsive">
  <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Key</th>
          <th>Name</th>
          <th>Status</th>
          <th colspan="4"><center>Actions</center></th>
        </tr>
      </thead>
      <tbody>
        <% _.each(sessions, function (session) { %>
        <tr class="<%= (session.status) ? 'success' : 'danger' %>">
          <td><%= session.id     %></td>
          <td><%= session.key    %></td>
          <td><%= session.name   %></td>
          <td><%= (session.status) ? 'Active' : 'Inative' %></td>
          <td><a class="btn btn-success" href="/speaker/session/select/<%= session.id %>" title="Selecionar Sessão" role="button" <%= (session.status) ? 'disabled' : '' %> >Select</a></td>
          <td><a class="btn btn-primary" href="/speaker/session/edit/<%= session.id %>" title="Edit Session" role="button" <%= (session.status) ? 'disabled' : '' %> >Edit</a></td>
          <td><a class="btn btn-warning" href="/speaker/session/find/<%= session.id %>" title="Show Details About Session" role="button">Details</a></td>
          <td><button class="btn btn-danger delete_session" link="/speaker/session/delete/<%= session.id %>" name="<%= session.name %>" title="Delete Sessão" type="button" <%= (session.status) ? 'disabled' : '' %> >Delete</button></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<% if (typeof sails.config.globals.message !== 'undefined' ) { %>
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
        <strong><%= sails.config.globals.message %></strong> 
    </div>
<% } %>

<% sails.config.globals.message = undefined %>
